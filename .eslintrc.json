{
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "plugin:stencil/recommended"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "stencil"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "globals": {
    "h": "writable"
  },
  "overrides": [
    {
      "files": ["**/*.tsx"],
      "rules": {
        "@typescript-eslint/no-unused-vars": "off"
      }
    }
  ]
}
